# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ioio_db
POSTGRES_USER=ioio_user
POSTGRES_PASSWORD=your_secure_password_here

# Backend Configuration
NODE_ENV=development
PORT=5000
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api

# MercadoPago Configuration
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# Cryptocurrency Payment Configuration
# BTC Wallet Address
BTC_WALLET_ADDRESS=your_btc_wallet_address

# ETH Wallet Address
ETH_WALLET_ADDRESS=your_eth_wallet_address

# Blockchain API (for payment verification)
BLOCKCHAIN_API_KEY=your_blockchain_api_key

# Google Cloud Configuration (for deployment)
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
GCP_SERVICE_ACCOUNT_KEY=path_to_service_account_key.json

# Email Configuration (optional, for order notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Admin Configuration
ADMIN_EMAIL=admin@ioio.com
ADMIN_PASSWORD=admin123

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
